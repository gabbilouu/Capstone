<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="OptionButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:background">@drawable/btn_white_pill</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
    <style name="PillButtonEvent" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_pill_green</item>
        <item name="android:backgroundTint">@null</item>   <!-- kill platform tint -->
        <item name="backgroundTint">@null</item>           <!-- kill AppCompat tint -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>