<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@drawable/bg_gradient5">

    <!-- Title -->
    <TextView
        android:id="@+id/thankYouTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thanks for telling us about you."
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/thankYouSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We'll try our best to cater to your needs!"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:layout_marginBottom="48dp" />

    <!-- Next Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/nextButtonT"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:cornerRadius="100dp"
        app:backgroundTint="@android:color/black"
        app:rippleColor="#333333"
        android:layout_marginTop="16dp" />

</LinearLayout>
