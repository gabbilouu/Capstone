<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- ===== Header: Name + EXP + Counters ===== -->
    <LinearLayout
        android:id="@+id/headerRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@android:color/white">

        <!-- Left: Name + EXP bar -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@android:color/transparent">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perry"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@android:color/black" />

            <ProgressBar
                android:id="@+id/progressExp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="6dp"
                android:max="100"
                android:progress="40" />
        </LinearLayout>

        <!-- Right: Counters row (streak + points) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@android:color/transparent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_leaf"
                android:contentDescription="Login streak" />

            <TextView
                android:id="@+id/tvStreak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="3"
                android:textColor="@android:color/black" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_flower"
                android:contentDescription="Points" />

            <TextView
                android:id="@+id/tvPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="67"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>

    <!-- ===== ONE backdrop covering everything between header and bottom nav ===== -->
    <FrameLayout
        android:id="@+id/sceneRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerRow"
        android:layout_above="@id/bottomNav"
        android:background="@drawable/backdrop">   <!-- single image here -->
        <!-- IMPORTANT: no white backgrounds in this region -->
        <!-- All child views must be transparent unless intentionally opaque -->

        <!-- Stack content vertically over the backdrop -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/transparent">

            <!-- Scene: Plant + Badge -->
            <FrameLayout
                android:id="@+id/sceneContainer"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/transparent">

                <ImageView
                    android:id="@+id/imgPlant"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="20dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Plant"
                    android:src="@drawable/ic_plant" />

                <ImageView
                    android:id="@+id/imgBadge"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end|top"
                    android:layout_margin="12dp"
                    android:src="@drawable/flowershop"
                    android:background="@android:color/transparent"
                    android:contentDescription="Badge" />
            </FrameLayout>

            <!-- Status card: Mood & Hydration (translucent so backdrop shows) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="12dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="14dp"
                app:cardBackgroundColor="#E6FFFFFF"> <!-- ~90% white -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:orientation="vertical"
                    android:background="@android:color/transparent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:background="@android:color/transparent">

                        <TextView
                            android:id="@+id/labelMood"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mood"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <ProgressBar
                            android:id="@+id/progressMood"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_marginTop="6dp"
                            android:max="100"
                            android:progress="70" />
                    </LinearLayout>

                    <Space
                        android:layout_width="1dp"
                        android:layout_height="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:background="@android:color/transparent">

                        <TextView
                            android:id="@+id/labelHydration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hydration"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <ProgressBar
                            android:id="@+id/progressHydration"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_marginTop="6dp"
                            android:max="100"
                            android:progress="50" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Daily Task Board (also translucent) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="14dp"
                app:cardBackgroundColor="#E6FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:orientation="vertical"
                    android:background="@android:color/transparent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@android:color/transparent">

                        <TextView
                            android:id="@+id/tvTaskBoardTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Daily Task Board"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <ProgressBar
                            android:id="@+id/progressDailyTasks"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="120dp"
                            android:layout_height="8dp"
                            android:max="100"
                            android:progress="30" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rowDailyLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="12dp"
                        android:background="@null">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="☀️"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvDailyLogin"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Daily Log-in"
                            android:textColor="@android:color/black" />

                        <ImageView
                            android:id="@+id/imgDailyLoginCheck"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/checkbox_on_background"
                            android:contentDescription="Completed" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerDailyTasks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        android:background="@android:color/transparent" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- spacer so content doesn't hide behind bottom nav -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="72dp" />
        </LinearLayout>
    </FrameLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="4"
        android:background="@android:color/white"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/HomeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_home_inactive"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="Home" />

        <ImageButton
            android:id="@+id/TaskButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_tasks_active"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="Tasks" />

        <ImageButton
            android:id="@+id/CalendarButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_calendar_active"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="Calendar" />

        <ImageButton
            android:id="@+id/SettingsButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_settings_active"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="Settings" />
    </LinearLayout>
</RelativeLayout>
