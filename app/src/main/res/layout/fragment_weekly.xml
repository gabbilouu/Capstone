<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@drawable/bg_gradient1">

    <!-- Title -->
    <TextView
        android:id="@+id/screenTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weekly it is!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Description -->
    <TextView
        android:id="@+id/screenDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We’ll send you a monthly report based off of your response. Let’s jump right in!"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Subtext -->
    <TextView
        android:id="@+id/screenSubtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You can also check your report in your user profile!"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:alpha="0.7"
        android:gravity="center"
        android:layout_marginBottom="64dp" />

    <!-- Next Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:cornerRadius="100dp"
        app:backgroundTint="@android:color/black"
        app:rippleColor="#333333" />

</LinearLayout>
