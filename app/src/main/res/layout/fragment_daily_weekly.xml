<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@drawable/bg_gradient7">

    <!-- Title -->
    <TextView
        android:id="@+id/alrightTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alright!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:background="@null"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/alrightSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Glad to see you take that first step to evaluate your mood and emotions! How often do you want us to assess your emotions?"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        android:layout_marginBottom="64dp"
        android:background="@null"/>

    <!-- Daily Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/dailyButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Daily"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:cornerRadius="100dp"
        app:backgroundTint="@android:color/black"
        app:rippleColor="#333333"
        android:layout_marginBottom="16dp" />

    <!-- Weekly Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/weeklyButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Weekly"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:background="@drawable/btn_white_pill"
        app:cornerRadius="100dp"
        app:backgroundTint="@null"
        app:rippleColor="#DDDDDD"
        android:layout_marginBottom="16dp" />

</LinearLayout>
