<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@drawable/bg_gradient6">

    <!-- Title -->
    <TextView
        android:id="@+id/journeyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Letâ€™s begin your journey."
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/journeySubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Would you like us to check your mood and give you a report? This helps you better understand your mood on a daily basis!"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:layout_marginBottom="64dp"
        android:paddingHorizontal="8dp" />

    <!-- Yes Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/yesButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Yes, count me in!"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:cornerRadius="100dp"
        app:backgroundTint="@android:color/black"
        app:rippleColor="#333333"
        android:layout_marginBottom="16dp" />

    <!-- No Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/noButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="No thank you."
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:background="@drawable/btn_white_pill"
        app:cornerRadius="100dp"
        app:backgroundTint="@null"
        app:rippleColor="#DDDDDD"
        android:layout_marginBottom="16dp" />

</LinearLayout>
