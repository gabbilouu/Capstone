<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Title -->
    <TextView
        android:id="@+id/journeyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Letâ€™s begin your journey."
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="12dp"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/journeySubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Would you like us to check your mood and give you a report? This helps you better understand your mood on a daily basis!"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:layout_marginBottom="40dp"/>

    <!-- Yes Button -->
    <Button
        android:id="@+id/yesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yes, count me in!"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- No Button -->
    <Button
        android:id="@+id/noButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No thank you."
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:drawableBottom="@android:drawable/divider_horizontal_dark"/>

</LinearLayout>
