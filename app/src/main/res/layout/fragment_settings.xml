<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNav"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Profile Card -->
            <FrameLayout
                android:id="@+id/profileCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <!-- Card content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:clipToPadding="false">

                    <ImageView
                        android:id="@+id/profileImage"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@mipmap/ic_launcher"
                        android:background="@android:color/darker_gray"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <!-- Name + (optional) pronouns appended in code -->
                        <TextView
                            android:id="@+id/profileName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:text="" />

                        <!-- University / Major go here (each can be blank) -->
                        <TextView
                            android:id="@+id/profileDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:textColor="@android:color/black"
                            android:text="" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@android:color/darker_gray"
                            android:layout_marginVertical="8dp" />

                        <TextView
                            android:id="@+id/userSince"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User Since: --"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Pencil (edit) in top-right -->
                <ImageButton
                    android:id="@+id/btnEditProfile"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="end|top"
                    android:layout_margin="6dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    android:contentDescription="Edit profile"
                    android:src="@drawable/ic_edit" />
            </FrameLayout>


            <!-- Stats Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="16dp">

                <!-- Streak -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@android:color/white"
                    android:elevation="2dp"
                    android:layout_marginEnd="8dp"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/streakText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ± -- day streak!"
                        android:textSize="16sp"
                        android:gravity="center"/>
                </LinearLayout>

                <!-- Personality Report -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@android:color/white"
                    android:elevation="2dp"
                    android:layout_marginStart="8dp"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Personality Report"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:ellipsize="none"
                        android:singleLine="false"/>

                    <com.github.mikephil.charting.charts.RadarChart
                        android:id="@+id/personalityRadarChart"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Goals + Mood Buttons -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/myGoalsButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:text="My Goals"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    app:backgroundTint="@android:color/white"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp"
                    app:cornerRadius="14dp"
                    app:rippleColor="#1F000000"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/moodReportButton"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/moodReportButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:text="In-Depth Mood Report"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    app:backgroundTint="@android:color/white"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp"
                    app:cornerRadius="14dp"
                    app:rippleColor="#1F000000"
                    app:layout_constraintStart_toEndOf="@id/myGoalsButton"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/myGoalsButton"
                    app:layout_constraintBottom_toBottomOf="@id/myGoalsButton"
                    android:layout_marginStart="8dp"
                    android:gravity="center"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- General Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GENERAL"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:id="@+id/generalCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_white"
                android:orientation="vertical"
                android:elevation="2dp"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/generalButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="General"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    app:backgroundTint="@android:color/white"
                    app:cornerRadius="14dp"
                    app:rippleColor="#1F000000"
                    android:gravity="center"/>

                <!-- divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="8dp"
                    android:background="#E0E0E0"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/aboutButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="About"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    app:backgroundTint="@android:color/white"
                    app:cornerRadius="14dp"
                    app:rippleColor="#1F000000"
                    android:gravity="center"/>

                <!-- divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="8dp"
                    android:background="#E0E0E0"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/notificationsButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Notifications"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    app:backgroundTint="@android:color/white"
                    app:cornerRadius="14dp"
                    app:rippleColor="#1F000000"
                    android:gravity="center"/>

            </LinearLayout>

            <!-- Misc Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MISC."
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:id="@+id/miscCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_white"
                android:orientation="vertical"
                android:elevation="2dp"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/faqButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="FAQ"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    app:backgroundTint="@android:color/white"
                    app:cornerRadius="14dp"
                    app:rippleColor="#1F000000"
                    android:gravity="center"/>

                <!-- divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="8dp"
                    android:background="#E0E0E0"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/contactUsButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Contact Us"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    app:backgroundTint="@android:color/white"
                    app:cornerRadius="14dp"
                    app:rippleColor="#1F000000"
                    android:gravity="center"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="4"
        android:background="@android:color/white"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/HomeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_home_active"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="Home" />

        <ImageButton
            android:id="@+id/TaskButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_tasks_active"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="Tasks" />

        <ImageButton
            android:id="@+id/CalendarButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_calendar_active"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="Calendar" />

        <ImageButton
            android:id="@+id/SettingsButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_settings_inactive"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="Settings" />
    </LinearLayout>
</RelativeLayout>
