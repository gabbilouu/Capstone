<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/store_background_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <!-- Top Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@android:color/white">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back" />

        <!-- Title -->
        <TextView
            android:id="@+id/store_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Store"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black"/>

        <!-- Sunflower Coins -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_sunflower"
                android:contentDescription="Coins" />

            <TextView
                android:id="@+id/coin_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="67"
                android:textSize="16sp"
                android:layout_marginStart="4dp"
                android:textColor="@android:color/black"/>
        </LinearLayout>
    </RelativeLayout>

    <!-- Refresh Timer -->
    <TextView
        android:id="@+id/store_refresh_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Store refreshes in: 1h 18m"
        android:gravity="center"
        android:background="@color/light_green"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <!-- Store Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/regular_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regular"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:background="@drawable/label_background"
            android:padding="6dp"
            android:layout_marginBottom="8dp" />

        <!-- Items Row -->
        <LinearLayout
            android:id="@+id/items_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4">

            <View
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/item_placeholder"
                android:layout_margin="6dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/item_placeholder"
                android:layout_margin="6dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/item_placeholder"
                android:layout_margin="6dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/item_placeholder"
                android:layout_margin="6dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
