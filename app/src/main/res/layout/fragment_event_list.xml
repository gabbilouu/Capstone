<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/monthText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="October 2025"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <Button
                    android:id="@+id/todayButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:layout_marginEnd="8dp" />

                <ImageButton
                    android:id="@+id/addEventButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:backgroundTint="@android:color/holo_green_light"
                    android:background="@drawable/rounded_button"
                    android:src="@android:drawable/ic_input_add"
                    android:contentDescription="Add Event"
                    app:tint="@android:color/white" />
            </LinearLayout>

            <!-- Category Buttons -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/filterRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="80dp"
                        android:layout_marginEnd="8dp"
                        android:text="School"
                        android:backgroundTint="@android:color/holo_blue_light" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="80dp"
                        android:layout_marginEnd="8dp"
                        android:text="Personal"
                        android:backgroundTint="@android:color/holo_red_light" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="80dp"
                        android:layout_marginEnd="8dp"
                        android:text="Work"
                        android:backgroundTint="@android:color/holo_orange_light" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="80dp"
                        android:layout_marginEnd="8dp"
                        android:text="Orgs."
                        android:backgroundTint="@android:color/holo_green_light" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="80dp"
                        android:layout_marginEnd="8dp"
                        android:text="Events"
                        android:backgroundTint="@android:color/holo_purple" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="80dp"
                        android:layout_marginEnd="8dp"
                        android:text="Birthdays"
                        android:backgroundTint="#FF69B4" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="80dp"
                        android:layout_marginEnd="8dp"
                        android:text="Family"
                        android:backgroundTint="#00BCD4" />

                    <Button
                        android:id="@+id/customCategoryButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="80dp"
                        android:text="Custom"
                        android:backgroundTint="@android:color/darker_gray"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </HorizontalScrollView>



            <!-- Calendar -->
            <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:mcv_showOtherDates="all"
                app:mcv_selectionColor="@android:color/holo_blue_dark"
                app:mcv_firstDayOfWeek="monday"
                app:mcv_tileHeight="44dp" />

            <!-- Today's Schedule -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:text="Today's Schedule"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!-- ✅ The dynamic date label -->
                <TextView
                    android:id="@+id/tvSelectedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thursday — October 9, 2025"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp" />

                <!-- Shown when no events -->
                <TextView
                    android:id="@+id/tvNoEvents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No events for this day."
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:visibility="gone" />

                <!-- Dynamic event list -->
                <LinearLayout
                    android:id="@+id/scheduleContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="4"
        android:padding="4dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton android:id="@+id/HomeButton" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:background="@null" android:src="@drawable/ic_home_active" />
        <ImageButton android:id="@+id/TaskButton" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:background="@null" android:src="@drawable/ic_tasks_active" />
        <ImageButton android:id="@+id/CalendarButton" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:background="@null" android:src="@drawable/ic_calendar_inactive" />
        <ImageButton android:id="@+id/SettingsButton" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:background="@null" android:src="@drawable/ic_settings_active" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
