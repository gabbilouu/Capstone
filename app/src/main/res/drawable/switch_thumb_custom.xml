<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- ON state -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="#F2F2F2"/> <!-- white thumb -->
            <stroke android:width="2dp" android:color="#77DD89"/> <!-- green outline -->
        </shape>
    </item>

    <!-- OFF state -->
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="#F2F2F2"/> <!-- white thumb -->
            <stroke android:width="2dp" android:color="#999999"/> <!-- green outline -->
        </shape>
    </item>
</selector>
